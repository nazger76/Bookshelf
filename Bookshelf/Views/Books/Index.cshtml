@model IEnumerable<Bookshelf.Models.ViewModels.BookViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Bookshelf</h2>

<p>
    <a asp-action="Create">Add a New Book to the Bookshelf</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowerName)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BorrowerName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BookID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookID">Delete</a>
                    
                </td>
                <td>

                </td>
                <td>
                    @*<div>*@
                        <a asp-action="Loan" asp-route-id="@item.BookID" hidden="@(!string.IsNullOrEmpty(item.BorrowerName))">Loan</a>

                        <form asp-action="ReturnLoan" asp-route-id="@item.BookID" hidden="@(string.IsNullOrEmpty(item.BorrowerName))">
                            <input type="submit" value="Return Loan" class="btn btn-link" />
                        </form>
                    @*</div>*@
                </td>
            </tr>
        }
    </tbody>
</table>
