@model Bookshelf.Models.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Loan";
}

<h2>Loan</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Loan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookID" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" readonly="readonly" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" readonly="readonly" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" readonly="readonly" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="BorrowerID" class="control-label"></label>
                @Html.DropDownListFor(m => m.BorrowerID, Model.Borrowers, "- Please Select a Borrower -", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
