@model IEnumerable<Bookshelf.Models.ViewModels.BorrowerViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Register a New Borrower</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BorrowerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BorrowerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BorrowerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
